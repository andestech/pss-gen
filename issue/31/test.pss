component pss_top {
    action root_a {
        activity {
            do testTruePath;
            do testFalsePath;
        }
    }

    action testTruePath {
        rand int value;
        constraint {
            if (1) {
                default value == 1;
            } else {
                default value == 2;
            }
        }
        exec body ASM = """testTruePath: {{value}}""";
    }

    action testFalsePath {
        rand int value;
        constraint {
            if (0) {
                default value == 1;
            } else {
                default value == 2;
            }
        }
        exec body ASM = """testFalsePath: {{value}}""";
    }
}

/**@}*/
