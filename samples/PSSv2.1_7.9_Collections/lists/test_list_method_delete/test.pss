component pss_top {

    enum eSTR2NUM {
        ZERO, ONE, TWO
    };

    struct sSTR2NUM {
        string stringVal = "NULL";
        int intVal = 0;
    };

    action root_a {
        list<bit [4] > nibbleList = {4'b0010, 4'b0011};
        list<int     > intList    = {2, 3};
        list<bool    > boolList   ;
        list<eSTR2NUM> enumList   ;
        list<string  > stringList = {"A", "B"};
        list<float32 > float32List;
        list<float64 > float64List;
        // list<chandle > chandleList;
        list<sSTR2NUM> structList ;

        bit [4]  nibbleVal ;
        int      intVal    ;
        bool     boolVal   ;
        eSTR2NUM enumVal   ;
        string   stringVal ;
        // float32  float32Val;
        // float64  float64Val;
        sSTR2NUM structVal ;
        exec pre_solve {
            nibbleVal  = nibbleList.delete(0);
            intVal     = intList.delete(0);
            // boolVal    = boolList.delete();
            // enumVal    = enumList.delete();
            stringVal  = stringList.delete(0);
            // float32Val = float32List.delete();
            // float64Val = float64List.delete();
            // structVal  = structList.delete();
        }

        int nibbleSize  = -1;
        int intSize     = -1;
        int boolSize    = -1;
        int enumSize    = -1;
        int stringSize  = -1;
        int float32Size = -1;
        int float64Size = -1;
        int structSize  = -1;
        exec post_solve {
            nibbleSize  = nibbleList.size();
            intSize     = intList.size();
            boolSize    = boolList.size();
            enumSize    = enumList.size();
            stringSize  = stringList.size();
            float32Size = float32List.size();
            float64Size = float64List.size();
            structSize  = structList.size();
        }

        exec body ASM =
"""
// test_list_method_delete
nibbleList  = {{nibbleSize}}, {{nibbleVal}}
intList     = {{intSize}}, {{intVal}}
boolList    = {{boolSize}}
enumList    = {{enumSize}}
stringList  = {{stringSize}}, {{stringVal}}
float32List = {{float32Size}}
float64List = {{float64Size}}
structList  = {{structSize}}
""";
    }
}

