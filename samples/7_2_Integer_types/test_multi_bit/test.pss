component pss_top {
	action root_a {
        rand bit [8]              byte_0;
        rand bit [8]   in [1]     byte_1;
        rand bit [8]   in [0..]   byte_2;
        rand bit [8]   in [..1]   byte_3;
        rand bit [8]   in [0, 1]  byte_4;
        rand bit [8]   in [..256] byte_5;
        rand bit [32]                                  word_0;
        rand bit [32]  in [4294967295]                 word_1;
        rand bit [32]  in [0..]                        word_2;
        rand bit [32]  in [..1]                        word_3;
        rand bit [32]  in [0, 1]                       word_4;
        rand bit [32]  in [..1 , 8..16 , 4294967296..] word_5;
        rand bit [64]                                  long_0;
        rand bit [64]  in [4294967296]                 long_1;
        rand bit [64]  in [0..]                        long_2;
        rand bit [64]  in [..1]                        long_3;
        rand bit [64]  in [0, 1]                       long_4;
        rand bit [64]  in [..1 , 8..16 , 4294967296..] long_5;
        rand bit [128]                                 vector_0;
        rand bit [128] in [4294967296]                 vector_1;
        rand bit [128] in [0..]                        vector_2;
        rand bit [128] in [..1]                        vector_3;
        rand bit [128] in [0, 1]                       vector_4;
        rand bit [128] in [..1 , 8..16 , 4294967296..] vector_5;

        bit [64]  default_byte_0;
        bit [64]  default_byte_1;
        bit [64]  default_byte_2;
        bit [64]  default_byte_3;
        bit [64]  default_byte_4;
        bit [64]  default_byte_5;
        bit [64]  default_word_0;
        bit [64]  default_word_1;
        bit [64]  default_word_2;
        bit [64]  default_word_3;
        bit [64]  default_word_4;
        bit [64]  default_word_5;
        bit [64]  default_long_0;
        bit [64]  default_long_1;
        bit [64]  default_long_2;
        bit [64]  default_long_3;
        bit [64]  default_long_4;
        bit [64]  default_long_5;
        bit [129] default_vector_0;
        bit [129] default_vector_1;
        bit [129] default_vector_2;
        bit [129] default_vector_3;
        bit [129] default_vector_4;
        bit [129] default_vector_5;
        exec pre_solve {
            default_byte_0   = byte_0;
            default_byte_1   = byte_1;
            default_byte_2   = byte_2;
            default_byte_3   = byte_3;
            default_byte_4   = byte_4;
            default_byte_5   = byte_5;
            default_word_0   = word_0;
            default_word_1   = word_1;
            default_word_2   = word_2;
            default_word_3   = word_3;
            default_word_4   = word_4;
            default_word_5   = word_5;
            default_long_0   = long_0;
            default_long_1   = long_1;
            default_long_2   = long_2;
            default_long_3   = long_3;
            default_long_4   = long_4;
            default_long_5   = long_5;
            default_vector_0 = vector_0;
            default_vector_1 = vector_1;
            default_vector_2 = vector_2;
            default_vector_3 = vector_3;
            default_vector_4 = vector_4;
            default_vector_5 = vector_5;
        }

        bit check_byte_0   = 0;
        bit check_byte_1   = 0;
        bit check_byte_2   = 0;
        bit check_byte_3   = 0;
        bit check_byte_4   = 0;
        bit check_byte_5   = 0;
        bit check_word_0   = 0;
        bit check_word_1   = 0;
        bit check_word_2   = 0;
        bit check_word_3   = 0;
        bit check_word_4   = 0;
        bit check_word_5   = 0;
        bit check_long_0   = 0;
        bit check_long_1   = 0;
        bit check_long_2   = 0;
        bit check_long_3   = 0;
        bit check_long_4   = 0;
        bit check_long_5   = 0;
        bit check_vector_0 = 0;
        bit check_vector_1 = 0;
        bit check_vector_2 = 0;
        bit check_vector_3 = 0;
        bit check_vector_4 = 0;
        bit check_vector_5 = 0;
        exec post_solve {
            if (byte_0 in [0..255]) check_byte_0 = 1;
            if (byte_1 in [1]     ) check_byte_1 = 1;
            if (byte_2 in [0..255]) check_byte_2 = 1;
            if (byte_3 in [0..1]  ) check_byte_3 = 1;
            if (byte_4 in [0..1]  ) check_byte_4 = 1;
            if (byte_5 in [0..255]) check_byte_5 = 1;
            if (word_0 in [0..4294967295]) check_word_0 = 1;
            if (word_1 in [4294967295]   ) check_word_1 = 1;
            if (word_2 in [0..4294967295]) check_word_2 = 1;
            if (word_3 in [0..1]         ) check_word_3 = 1;
            if (word_4 in [0..1]         ) check_word_4 = 1;
            if (word_5 in [0..1 , 8..16] ) check_word_5 = 1;
            if (long_0 >= 0                                    ) check_long_0 = 1;
            if (long_1 in [4294967296]                         ) check_long_1 = 1;
            if (long_2 >= 0                                    ) check_long_2 = 1;
            if (long_3 in [0..1]                               ) check_long_3 = 1;
            if (long_4 in [0..1]                               ) check_long_4 = 1;
            if (long_5 in [0..1 , 8..16] || long_5 > 4294967296) check_long_5 = 1;
            if (vector_0 >= 0                                      ) check_vector_0 = 1;
            if (vector_1 in [4294967296]                           ) check_vector_1 = 1;
            if (vector_2 >= 0                                      ) check_vector_2 = 1;
            if (vector_3 in [0..1]                                 ) check_vector_3 = 1;
            if (vector_4 in [0..1]                                 ) check_vector_4 = 1;
            if (vector_5 in [0..1 , 8..16] || vector_5 > 4294967296) check_vector_5 = 1;
        }

        exec body ASM =
        """
            # testMultiBit
            default_byte_0   = {{default_byte_0}}
            default_byte_1   = {{default_byte_1}}
            default_byte_2   = {{default_byte_2}}
            default_byte_3   = {{default_byte_3}}
            default_byte_4   = {{default_byte_4}}
            default_byte_5   = {{default_byte_5}}
            default_word_0   = {{default_word_0}}
            default_word_1   = {{default_word_1}}
            default_word_2   = {{default_word_2}}
            default_word_3   = {{default_word_3}}
            default_word_4   = {{default_word_4}}
            default_word_5   = {{default_word_5}}
            default_long_0   = {{default_long_0}}
            default_long_1   = {{default_long_1}}
            default_long_2   = {{default_long_2}}
            default_long_3   = {{default_long_3}}
            default_long_4   = {{default_long_4}}
            default_long_5   = {{default_long_5}}
            default_vector_0 = {{default_vector_0}}
            default_vector_1 = {{default_vector_1}}
            default_vector_2 = {{default_vector_2}}
            default_vector_3 = {{default_vector_3}}
            default_vector_4 = {{default_vector_4}}
            default_vector_5 = {{default_vector_5}}
            check_byte_0     = {{check_byte_0}}
            check_byte_1     = {{check_byte_1}}
            check_byte_2     = {{check_byte_2}}
            check_byte_3     = {{check_byte_3}}
            check_byte_4     = {{check_byte_4}}
            check_byte_5     = {{check_byte_5}}
            check_word_0     = {{check_word_0}}
            check_word_1     = {{check_word_1}}
            check_word_2     = {{check_word_2}}
            check_word_3     = {{check_word_3}}
            check_word_4     = {{check_word_4}}
            check_word_5     = {{check_word_5}}
            check_long_0     = {{check_long_0}}
            check_long_1     = {{check_long_1}}
            check_long_2     = {{check_long_2}}
            check_long_3     = {{check_long_3}}
            check_long_4     = {{check_long_4}}
            check_long_5     = {{check_long_5}}
            check_vector_0   = {{check_vector_0}}
            check_vector_1   = {{check_vector_1}}
            check_vector_2   = {{check_vector_2}}
            check_vector_3   = {{check_vector_3}}
            check_vector_4   = {{check_vector_4}}
            check_vector_5   = {{check_vector_5}}
        """;
    }
}

