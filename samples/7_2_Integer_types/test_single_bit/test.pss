/*!
@weakgroup      7_2_Integer_types
@{
@file
@author         Luther Lee
@data           2025/12/03
@brief          Test single bit declaration with diffrent syntax.
@version
Portable Test and Stimulus Standard Version 3.0 <br>
> Section 7.2 : Integer types <br>


---------------------------------------------------------------------------------------------------

### Test Command
@code{.unparsed}
make
@endcode
*/
component pss_top {
	action root_a {
        rand bit             single_bit_0; // 7.2.1 DSL syntax: The default value of the bit and int types is 0.
        rand bit in [ 1 ]    single_bit_1;
        rand bit in [ 0.. ]  single_bit_2;
        rand bit in [..1 ]   single_bit_3;
        rand bit in [ 0 , 1] single_bit_4;
        rand bit in [..2 ]   single_bit_5; // 7.2.1 DSL syntax: The width and value domain specifications are independent.

        bit [8] default_0;
        bit [8] default_1;
        bit [8] default_2;
        bit [8] default_3;
        bit [8] default_4;
        bit [8] default_5;
        exec pre_solve {
            default_0 = single_bit_0;
            default_1 = single_bit_1;
            default_2 = single_bit_2;
            default_3 = single_bit_3;
            default_4 = single_bit_4;
            default_5 = single_bit_5;
        }

        bit check_0 = 0;
        bit check_1 = 0;
        bit check_2 = 0;
        bit check_3 = 0;
        bit check_4 = 0;
        bit check_5 = 0;
        exec post_solve {
            if (single_bit_0 in [0..1]) check_0 = 1;
            if (single_bit_1 in [1]   ) check_1 = 1;
            if (single_bit_2 in [0..1]) check_2 = 1;
            if (single_bit_3 in [0..1]) check_3 = 1;
            if (single_bit_4 in [0..1]) check_4 = 1;
            if (single_bit_5 in [0..1]) check_5 = 1;
        }

        exec body ASM =
        """
            # testSingleBit
            default_0 = {{default_0}}
            default_1 = {{default_1}}
            default_2 = {{default_2}}
            default_3 = {{default_3}}
            default_4 = {{default_4}}
            default_5 = {{default_5}}
            check_0   = {{check_0}}
            check_1   = {{check_1}}
            check_2   = {{check_2}}
            check_3   = {{check_3}}
            check_4   = {{check_4}}
            check_5   = {{check_5}}
        """;
    }
}

/**@}*/
